<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.printinghouse.ui.DashboardController"
      spacing="16"
      styleClass="content-area">

    <HBox fx:id="metricsBox" spacing="12"/>

    <!-- Charts row -->
    <HBox spacing="12" VBox.vgrow="ALWAYS">
        <StackPane fx:id="revCostChart" VBox.vgrow="ALWAYS"/>
        <StackPane fx:id="utilGauge"   VBox.vgrow="ALWAYS"/>
    </HBox>

    <ToolBar>
        <Button text="New Publication" onAction="#onNewPublication"/>
        <Button text="Add Printer"     onAction="#onAddPrinter"/>
        <Button text="Generate Report" onAction="#onGenerateReport"/>
    </ToolBar>
</VBox>
